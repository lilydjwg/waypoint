# Waypoint's default config
# User config is usually at ~/.config/waypoint/config

bindings {
    escape quit
    return left-click

    h cut-left
    j cut-down
    k cut-up
    l cut-right

    left cut-left
    down cut-down
    up cut-up
    right cut-right

    shift+h move-left
    shift+j move-down
    shift+k move-up
    shift+l move-right

    shift+left move-left
    shift+down move-down
    shift+up move-up
    shift+right move-right
}
